<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:tools="http://schemas.android.com/tools"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             android:orientation="vertical"
             tools:context="com.arz_x.android.product_tracer.TraceFilesMenuFragment">

    <!-- TODO: Update blank fragment layout -->

    <FrameLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxWidth="@dimen/small_image_size"
            android:maxHeight="@dimen/small_image_size"
            android:src="@android:drawable/ic_menu_revert"
            android:id="@+id/backImageButton"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="@string/caption_trace_menu"
            android:layout_gravity="center"
            android:id="@+id/captionTextView"/>
    </FrameLayout>

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/menuTableLayout">
    </TableLayout>
</LinearLayout>
