<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingRight="@dimen/activity_horizontal_margin"
                android:paddingTop="@dimen/activity_vertical_margin"
                android:paddingBottom="@dimen/activity_vertical_margin"
                tools:context="ru.po_znaika.alphabet.StartActivity"
                android:id="@+id/mainLayout"
                android:background="@color/standard_background">
    <ImageView
        android:layout_width="@dimen/start_activity_sun_image_size"
        android:layout_height="@dimen/start_activity_sun_image_size"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:id="@+id/sunImageView"
        android:scaleType="centerInside"
        android:clickable="true" />

    <ImageView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:id="@+id/helloPupilImageView"
        android:scaleType="centerInside"
        android:clickable="true"/>

    <ImageView
        android:layout_width="@dimen/start_activity_play_image_width"
        android:layout_height="@dimen/start_activity_play_image_height"
        android:id="@+id/playImageView"
        android:clickable="true" />

    <ImageView
        android:layout_width="@dimen/start_activity_parents_image_width"
        android:layout_height="@dimen/start_activity_parents_image_height"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:id="@+id/parentsImageView"
        android:clickable="true" />

    <ImageView
        android:layout_width="@dimen/start_activity_exit_image_width"
        android:layout_height="@dimen/start_activity_exit_image_height"
        android:id="@+id/exitImageView"
        android:clickable="true" />

    <ImageView
        android:layout_width="@dimen/start_activity_settings_image_size"
        android:layout_height="@dimen/start_activity_settings_image_size"
        android:layout_alignParentBottom="true"
        android:id="@+id/settingsImageView"
        android:clickable="true" />

</RelativeLayout>
