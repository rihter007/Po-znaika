            android:layout_alignParentEnd="true"/>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0px"
        android:layout_weight="1">

        <ImageView
            android:layout_width="@dimen/medium_image_size"
            android:layout_height="@dimen/medium_image_size"
            android:id="@+id/backImageView"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"/>

        <ImageView
            android:layout_width="@dimen/character_exercise_menu_image_size"
            android:layout_height="@dimen/character_exercise_menu_image_size"
            android:id="@+id/forwardImageView"
            android:layout_centerVertical="true"
