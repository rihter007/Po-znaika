        <ImageView
            android:layout_width="@dimen/character_exercise_menu_image_size"
            android:layout_height="@dimen/character_exercise_menu_image_size"
            android:id="@+id/characterImageView9"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"/>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0px"
        android:layout_weight="1">

        <ImageView
            android:layout_width="@dimen/character_exercise_menu_image_size"
            android:layout_height="@dimen/character_exercise_menu_image_size"
            android:id="@+id/characterImageView10"
            android:layout_centerVertical="true"
