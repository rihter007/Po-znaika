<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="ru.po_znaika.alphabet.CreateWordsFromSpecifiedFragment">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:gravity="center_horizontal"
        android:textSize="@dimen/medium_text_size"
        android:text="@string/caption_create_words_from_specified" />

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <GridView
                android:layout_marginTop="@dimen/small_margin"
                android:layout_width="200dp"
                android:layout_height="@dimen/character_height"
                android:horizontalSpacing="1dp"
                android:verticalSpacing="1dp"
                android:id="@+id/sourceGridView"
                android:background="#ff000000"/>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent">

                <Button
                    android:layout_gravity="center_vertical|right"
                    android:layout_marginRight="@dimen/medium_margin"
                    android:layout_width="@dimen/small_button_size"
                    android:layout_height="wrap_content"
                    android:text="@string/button_create"
                    android:id="@+id/createWordButton"/>
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="fill_parent">

            <GridView
                android:layout_marginTop="@dimen/small_margin"
                android:layout_width="200dp"
                android:layout_height="@dimen/character_height"
                android:id="@+id/destinationGridView"
                android:horizontalSpacing="1dp"
                android:verticalSpacing="1dp"
                android:background="#ff000000"/>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent">

                <Button
                    android:layout_gravity="center_vertical|right"
                    android:layout_marginRight="@dimen/medium_margin"
                    android:layout_width="@dimen/small_button_size"
                    android:layout_height="wrap_content"
                    android:text="@string/caption_finish"
                    android:id="@+id/finishButton"/>
            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        android:layout_gravity="center_horizontal">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center">

            <ImageButton
                android:layout_gravity="center_horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/backImageButton"
                android:src="@drawable/arrow_left"/>

            <TextView
                android:layout_gravity="center_horizontal"
                android:gravity="center_horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="@string/caption_back"
                android:id="@+id/backCaptionTextView"/>
        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:layout_gravity="center_horizontal"
                android:gravity="center_horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text=""
                android:id="@+id/charactersCountTextView"/>

            <ListView
                android:layout_width="@dimen/medium_list_view_width"
                android:layout_height="wrap_content"
                android:id="@+id/wordsListView"/>

        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center">

            <ImageButton
                android:layout_gravity="center_horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/skipImageButton"
                android:src="@drawable/arrow_right"/>

            <TextView
                android:layout_gravity="center_horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="@string/caption_skip"
                android:id="@+id/skipCaptionTextView"/>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>
