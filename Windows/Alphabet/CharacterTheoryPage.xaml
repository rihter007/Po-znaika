<Page x:Class="ru.po_znaika.alphabet.CharacterTheoryPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      mc:Ignorable="d" Title="CharacterTheoryPage" d:DesignHeight="570" d:DesignWidth="750">

    <Grid>
        <Image Height="400" Width="400" HorizontalAlignment="Left" Margin="164,72,0,0" Name="ui_theoryPicture" Stretch="Fill" VerticalAlignment="Top" />

        <Button Height="40" HorizontalAlignment="Left" Margin="164,485,0,0" Name="ui_backButton" VerticalAlignment="Top" Width="121" FontStyle="Italic" Click="ui_backButton_Click">
            <StackPanel>
                <Image Source="Pictures/left_arrow.jpg" />
                <TextBlock FontSize="24">Назад</TextBlock>
            </StackPanel>
        </Button>
        <Button Height="40" HorizontalAlignment="Left" Margin="443,485,0,0" Name="ui_forwardButton" VerticalAlignment="Top" Width="121" FontStyle="Italic" Click="ui_forwardButton_Click">
            <StackPanel>
                <Image Source="Pictures/right_arrow.jpg" />
                <TextBlock FontSize="24">Далее</TextBlock>
            </StackPanel>
        </Button>
    </Grid>
</Page>
